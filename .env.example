# NEPSE Portfolio API - Environment Configuration
# Copy this file to .env and update values as needed

# Server Configuration
NODE_ENV=development
PORT=3000

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=nepse
DB_PASSWORD=nepse_password
DB_NAME=nepse_db
DB_POOL_SIZE=10

# Scraper Configuration
LOG_LEVEL=info
SCRAPER_DELAY=2000
MAX_CONCURRENT_SCRAPERS=3
SCRAPER_TIMEOUT=30000

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
JWT_SECRET=your-secret-key

# AI Configuration
# DeepSeek (via OpenRouter) - Used for stock/portfolio summaries and Nepali translation
DEEPSEEK_API_KEY=your_deepseek_api_key

# OpenAI - Can be used for blog generation
OPENAI_API_KEY=your_openai_api_key

# Gemini - Alternative for blog generation
GEMINI_API_KEY=your_gemini_api_key

# Blog AI Configuration
# Provider: 'openai', 'gemini', or 'deepseek' (default: 'openai')
# Falls back automatically if primary provider fails
BLOG_AI_PROVIDER=openai
# Optional: Override default model for the provider
# OpenAI default: gpt-4o-mini, Gemini default: gemini-2.0-flash-exp, DeepSeek default: deepseek/deepseek-chat
BLOG_AI_MODEL=gpt-4o-mini

# Internal API Key
API_KEY=your_api_key
OPENAI_API_KEY=

# Backblaze B2 Backup Configuration
BACKBLAZE_KEY_ID=your_backblaze_key_id
BACKBLAZE_KEY_NAME=your_backblaze_key_name
BACKBLAZE_APPLICATION_KEY=your_backblaze_application_key
BACKBLAZE_BUCKET_NAME=your_bucket_name