{
  "name": "nepse-portfolio-api",
  "version": "2.1.0",
  "description": "Enhanced NEPSE stock market data scraper and portfolio API",
  "main": "nepse.js",
  "bin": {
    "nepse": "./nepse.js"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "scheduler": "node src/scheduler.js",
    "scraper": "node src/index.js prices --save",
    "scraper:details": "node src/index.js companies --missing --save",
    "scraper:all": "node src/index.js companies --save",
    "test": "npm run test:scraper && npm run test:api",
    "test:scraper": "node tests/scraper.test.js",
    "test:api": "node tests/api.test.js",
    "clean": "rm -rf logs/*.log public/images/* nepse.db",
    "lint": "echo 'Linting not configured'",
    "deploy:ubuntu": "sudo ./deploy-ubuntu.sh",
    "deploy:docker": "docker-compose -f docker-compose.production.yml up -d",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "update:prices": "node src/index.js prices --save",
    "update:companies": "node src/index.js companies --missing --save",
    "update:all": "npm run update:prices && npm run update:companies",
    "populate:initial": "./populate-data.sh",
    "backup:db": "cp nepse.db nepse.db.backup.$(date +%Y%m%d_%H%M%S)",
    "restore:db": "echo 'Usage: cp nepse.db.backup.YYYYMMDD_HHMMSS nepse.db'"
  },
  "keywords": [
    "nepse",
    "nepal",
    "stock",
    "market",
    "scraper",
    "api",
    "portfolio"
  ],
  "author": "Ashok Pokhrel",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^2.2.1",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "luxon": "^3.7.2",
    "node-cron": "^4.2.1",
    "puppeteer": "^24.32.1",
    "sharp": "^0.34.5",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}