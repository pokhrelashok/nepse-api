{
  "name": "nepse-portfolio-api",
  "version": "2.1.0",
  "description": "Enhanced NEPSE stock market data scraper and portfolio API",
  "main": "nepse.js",
  "bin": {
    "nepse": "./nepse.js"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "scheduler": "node src/scheduler.js",
    "scraper": "node src/index.js prices",
    "scraper:companies": "node src/index.js companies",
    "scraper:details": "node src/index.js companies",
    "test": "npm run test:scraper && npm run test:api",
    "test:scraper": "node tests/scraper.test.js",
    "test:api": "node tests/api.test.js",
    "clean": "rm -rf logs/*.log public/images/*",
    "lint": "echo 'Linting not configured'",
    "deploy:ubuntu": "sudo deploy/deploy-ubuntu.sh",
    "deploy:docker": "docker-compose -f deploy/docker-compose.production.yml up -d",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "migrate": "node src/database/migrate.js",
    "migrate:status": "node src/database/migrate.js status",
    "migrate:dry-run": "node src/database/migrate.js dry-run",
    "populate:initial": "./populate-data.sh",
    "backup:db": "echo 'Use mysqldump -u nepse -p nepse_db > backup.sql'",
    "restore:db": "echo 'Use mysql -u nepse -p nepse_db < backup.sql'"
  },
  "keywords": [
    "nepse",
    "nepal",
    "stock",
    "market",
    "scraper",
    "api",
    "portfolio"
  ],
  "author": "Ashok Pokhrel",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^2.2.1",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "luxon": "^3.7.2",
    "mysql2": "^3.15.3",
    "node-cron": "^4.2.1",
    "puppeteer": "^24.32.1",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}