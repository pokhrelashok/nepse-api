{
  "name": "nepse-portfolio-api",
  "version": "2.1.0",
  "description": "Enhanced NEPSE stock market data scraper and portfolio API",
  "main": "nepse.js",
  "bin": {
    "nepse": "./nepse.js"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "scheduler": "node src/index.js",
    "scraper": "node src/index.js --force",
    "scraper:details": "node src/index.js --scrape-details",
    "test": "npm run test:scraper && npm run test:api",
    "test:scraper": "node tests/scraper.test.js",
    "test:api": "node tests/api.test.js",
    "clean": "rm -rf downloads/ *.db",
    "lint": "echo 'No linter configured'"
  },
  "keywords": [
    "nepse",
    "nepal",
    "stock",
    "market",
    "scraper",
    "api",
    "portfolio"
  ],
  "author": "Ashok Pokhrel",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "luxon": "^3.7.2",
    "node-cron": "^4.2.1",
    "puppeteer": "^24.32.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}