{
  "name": "nepse-portfolio-api",
  "version": "2.1.0",
  "description": "Enhanced NEPSE stock market data scraper and portfolio API",
  "main": "nepse.js",
  "bin": {
    "nepse": "./nepse.js"
  },
  "scripts": {
    "start": "bun src/server.js",
    "dev": "bun --watch src/server.js",
    "scheduler": "bun src/index.js schedule",
    "scraper": "bun src/index.js prices",
    "scraper:companies": "bun src/index.js companies",
    "scraper:details": "bun src/index.js companies",
    "scraper:ipo": "bun src/index.js ipos",
    "scraper:fpo": "bun src/index.js fpos",
    "scraper:seed": "bun src/index.js seed",
    "scraper:seed:quick": "bun src/index.js seed --quick",
    "notifications": "bun src/index.js notifications",
    "test": "bun run test:scraper && bun run test:api && bun run test:portfolio",
    "test:scraper": "bun tests/scraper.test.js",
    "test:api": "bun tests/api.test.js",
    "test:portfolio": "bun test tests/portfolio_full_crud.test.js",
    "test:unit": "bun test",
    "clean": "rm -rf logs/*.log public/images/*",
    "build": "cd frontend && npm install && npm run build",
    "lint": "echo 'Linting not configured'",
    "deploy:ubuntu": "sudo deploy/deploy-ubuntu.sh",
    "deploy:docker": "docker-compose -f deploy/docker-compose.production.yml up -d",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "migrate": "bun src/database/migrate.js",
    "migrate:status": "bun src/database/migrate.js status",
    "migrate:dry-run": "bun src/database/migrate.js dry-run",
    "migrate:fresh": "bun src/database/migrate-fresh.js",
    "db:seed": "bun src/database/seed.js",
    "populate:initial": "./deploy/scripts/populate-initial-data.sh",
    "backup:db": "echo 'Use mysqldump -u nepse -p nepse_db > backup.sql'",
    "restore:db": "echo 'Use mysql -u nepse -p nepse_db < backup.sql'",
    "backfill:market-history": "bun scripts/backfill-market-history.js"
  },
  "keywords": [
    "nepse",
    "nepal",
    "stock",
    "market",
    "scraper",
    "api",
    "portfolio"
  ],
  "author": "Ashok Pokhrel",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "backblaze-b2": "^1.7.1",
    "body-parser": "^2.2.1",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "firebase-admin": "^13.6.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.3",
    "luxon": "^3.7.2",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "node-cron": "^4.2.1",
    "openai": "^6.15.0",
    "puppeteer": "^24.32.1",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "bun": ">=1.0.0"
  },
  "trustedDependencies": [
    "sharp"
  ]
}